<div class="result-box">
  <div align="center">
    <h1><%= @pokemon[:name].capitalize %></h1>
  </div>

  <div align="center">
    <p>Number: <%= @pokemon[:id] %></p>
    <%= image_tag "#{@pokemon[:sprites][:front_default]}" %>
  </div>
  
  <%= form_tag '/pokemon', method: :get do %>
    <div align="center" class="poke-search">
      <p>Search for another Pok√©mon:</p>
      <%= text_field_tag :pokemon %>
      <%= submit_tag "Search" %>
    </div align="center">
  <% end %>
</div>